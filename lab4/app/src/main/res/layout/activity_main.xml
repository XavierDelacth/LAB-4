<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Middleware Payroll"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1A73E8"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Botão GET -->
    <Button
        android:id="@+id/get_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="GET Todos os Funcionários"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#34A853"
        android:layout_marginBottom="16dp"
        android:elevation="8dp" />

    <!-- Botão POST -->
    <Button
        android:id="@+id/post_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="POST Criar Novo Funcionário"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#EA4335"
        android:layout_marginBottom="24dp"
        android:elevation="8dp" />

    <Button
        android:id="@+id/put_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="PUT Atualizar Funcionário (ID 1)"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#FBBC04"
        android:layout_marginBottom="16dp"
        android:elevation="8dp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="DELETE Apagar Funcionário (ID 1)"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#8B0000"
        android:layout_marginBottom="24dp"
        android:elevation="8dp" />

    <!-- Scroll com resultado -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clique num botão para começar..."
            android:textSize="15sp"
            android:fontFamily="monospace"
            android:background="#1E1E1E"
            android:textColor="#00FF00"
            android:padding="16dp"
            android:layout_margin="8dp" />

    </ScrollView>

    <!-- Status -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectado ao servidor: 192.168.181.130:8080"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="#666666"
        android:layout_marginTop="16dp" />

</LinearLayout>